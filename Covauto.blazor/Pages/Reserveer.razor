@page "/Reserveer"

<PageTitle>Home</PageTitle>

<h1>Reserveer Leenauto:</h1>

<form action="/" method="post">
    <label for="leenauto">Selecteer Leenauto</label>
    <select id="leenauto" name="leenauto">
        @foreach (var leenauto in leenautos)
        {
            <option value="@leenauto.Id">@leenauto.Kenteken</option>
        }
    </select>
    <br />

    <label for="reserveervanaf">Reserveer Vanaf</label>
    <input type="datetime-local" id="reserveervanaf" name="reserveervanaf" />
    <br />

    <label for="reserveertot">Reserveer Tot</label>
    <input type="datetime-local" name="reserveertot" />
    <br />

    <label for="collega">Collega</label>
    <select id="collega" name="collega">
        @foreach (var collega in collegas)
        {
            <option value="@collega.Id">@collega.Naam</option>
        }
    </select> 
    <br />

    <button type="submit">Reservereer!</button>
</form>
